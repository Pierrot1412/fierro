function searchPhotos($directory, $code) {
    $photos = array();
    if (!is_dir($directory)) {
        die("Directory not found: $directory");
    }

    $dir = opendir($directory);

    while (($file = readdir($dir)) !== false) {
        if ($file == '.' || $file == '..') {
            continue;
        }

